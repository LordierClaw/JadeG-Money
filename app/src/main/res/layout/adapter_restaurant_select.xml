<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|start">
        <ImageView
            android:id="@+id/adapter_restaurant_image"
            android:layout_width="93dp"
            android:layout_height="58dp"
            android:background="#D9D9D9"
            android:layout_marginStart="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/adapter_transaction_name"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Some restaurant"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/adapter_transaction_time"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Number, Street, Province,..."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ADA9A9"
                android:layout_alignStart="@id/adapter_transaction_name"
                android:layout_below="@id/adapter_transaction_name"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/adapter_transaction_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="10.0 km"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
        
    </LinearLayout>



</com.google.android.material.card.MaterialCardView>