<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bot_msg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:textSize="11sp"
        android:layout_marginStart="56dp"/>
    <LinearLayout
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="top"
            android:layout_marginStart="10dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/cardview_border"
            android:layout_marginStart="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bot_msg_text"
                android:fontFamily="@font/robotoregular"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:text="Bạn có muốn chuyển tiền cho NGUYỄN VĂN A không?"/>
            <TextView
                android:id="@+id/bot_msg_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="100.000đ"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bot_send_money_btn"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_marginVertical="2dp"
                android:layout_height="41dp"
                app:backgroundTint="#E40000"
                android:text="Giao dịch"
                app:icon="@drawable/verified_user"
                app:iconGravity="end"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bot_split_prepaid_btn"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_marginVertical="2dp"
                android:layout_height="41dp"
                app:backgroundTint="#E40000"
                android:text="Chia tiền trước"
                app:iconGravity="end"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bot_split_postpaid_btn"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="9dp"
                android:layout_marginVertical="2dp"
                android:layout_height="41dp"
                app:backgroundTint="#E40000"
                android:text="Chia tiền sau"
                app:iconGravity="end"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>